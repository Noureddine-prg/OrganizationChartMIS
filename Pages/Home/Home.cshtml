@page "/Home"

@model OrganizationChartMIS.Pages.Home.HomeModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="h-100 d-flex flex-column">
    <!-- Header -->
    <div class="text-light container-fluid py-2 d-flex justify-content-between bg-dark border-bottom">
        <div class="my-auto"><h2>Mayor's Office</h2></div>
        <div class="py-2 d-flex gap-3 my-auto">
            <div class="">
                <a class="btn btn-primary" href="/Dashboard/Dashboard">View Dashboard</a>
            </div>
            <div class="">
                <a class="btn btn-secondary" href="/OrganizationChart/OrganizationChart">View Organization Chart</a>
            </div>
        </div>
    </div>

    <div class="row mx-0 h-100">

        <!-- Sidebar -->
        <div class="px-5 col-4  d-flex flex-column justify-content-center" style="background: linear-gradient(to bottom, #004d40 0%, #003366 100%)">
            <h2 class="text-light pb-5">
                Sign in to Org Chart
            </h2>
            <form class="text-light">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>

        <!-- Main -->
        <div class="col-8 p-0 d-flex position-relative">
            <div class="position-absolute" style="background-color: black; width: 100%; height: 100%; z-index: -1;">
                <img src="~/assets/giphy.gif" style="object-fit: cover;" class="w-100 h-100" alt="background image of a city">
            </div>
            <div class="position-absolute" style="background-color: black; opacity: 0.4; width: 100%; height: 100%; z-index: -1;"></div>
            <h1 class="text-white m-auto"> MIS Organization Chart Application</h1>
        </div>
    </div>
</div>