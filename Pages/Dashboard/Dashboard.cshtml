@page
@model OrganizationChartMIS.Pages.Dashboard.DashboardModel
@section Scripts {
    <script src="~/js/ModalControl.js" asp-append-version="true"></script>
}

<partial name="_AddEmployeeModal" model="Model.NewEmployee" />
<partial name="_AddPositionModal" model="Model.NewPosition" />
<h2>Dashboard</h2>

<div >
    <h3>Positions</h3>
    <button class="btn btn-outline-dark" onclick="showModal('addPositionModal')">Add Position</button>
    <table class="table">
        <thead>
            <tr>
                <th>Position ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Hierarchy Level</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>

                @foreach (var position in Model.Positions)
                {
                    <tr>
                        <td>@position.Poid</td>
                        <td>@position.Name</td>
                        <td>@position.Department</td>
                        <td>@position.HierarchyLevel</td>
                        <td>
                            <button class="btn btn-outline-dark">Update</button>
                            <button class="btn btn-outline-dark">Delete</button>
                        </td>
                    </tr>
                }

        </tbody>
 
    </table>
</div>

<div >
    <h3>Employees</h3>
    <button class="btn btn-outline-dark" id="openModalButton">Add Employee</button>
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Parent ID</th>
                <th>Status</th>
                <th>Position ID</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Emid</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.ParentId</td>
                    <td>@employee.Status</td>
                    <td>@employee.PositionId</td>
                    <td>
                        <button class="btn btn-outline-dark">Update</button>
                        <button class="btn btn-outline-dark">Delete</button>
                    </td>
                </tr>
            }
        </tbody>

    </table>
        
</div>

