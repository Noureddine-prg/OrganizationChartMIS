@page
@model OrganizationChartMIS.Pages.Dashboard.DashboardModel
@{
}

<h2>Dashboard</h2>

<div >
    <h3>Positions</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Position ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Hierarchy Level</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var position in @Model.Positions)
            {
                <tr>
                    <td>@position.Poid</td>
                    <td>@position.Name</td>
                    <td>@position.Department</td>
                    <td>@position.HierarchyLevel</td>
                </tr>    
            }
        </tbody>
 
    </table>
</div>

<div >
    <h3>Employees</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Parent ID</th>
                <th>Status</th>
                <th>Position ID</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Emid</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.ParentId</td>
                    <td>@employee.Status</td>
                    <td>@employee.PositionId</td>
                </tr>
            }
        </tbody>

    </table>
        
</div>

