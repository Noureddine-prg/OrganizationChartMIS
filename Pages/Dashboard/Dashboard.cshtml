@page
@model OrganizationChartMIS.Pages.Dashboard.DashboardModel
@section Scripts {
    <script src="~/js/ModalControl.js" asp-append-version="true"></script>
}


<partial name="_AddEmployeeModal" model="@Model.NewEmployee" />
<partial name="_UpdateEmployeeModal" model="@Model.NewEmployee" />
<partial name="_DeleteEmployeeModal" model="@Model.NewEmployee" />



<h2>Dashboard</h2>

<div class="table-responsive" style="height:500px; overflow-y:auto; margin:20px;">
    <h3>Positions</h3>
    <button class="btn btn-outline-dark" onclick="showModal('addPositionModal')">Add Position</button>
    <table class="table">
        <thead>
            <tr>
                <th>Position ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model.Positions)
            {
                <tr>
                    <td>@position.Poid</td>
                    <td>@position.Name</td>
                    <td>@position.DepartmentId</td> 
                    <td>@position.Level</td>
                    <td>
                        <button class="btn btn-outline-dark" onclick="editPosition('@position.Poid') ">Update</button>
                        <button class="btn btn-outline-dark" onclick="deletePosition('@position.Poid')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="table-responsive" style="height:500px; overflow-y:auto; margin:20px;">
    <h3>Employees</h3>
    <button class="btn btn-outline-dark" id="openModalButton">Add Employee</button>
    <table class="table" id="employeesTable">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th> 
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Emid</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.PositionId</td> 
                    <td>@employee.Status</td>
                    <td>
                        <button class="btn btn-outline-dark" onclick="updateEmployeeModal('@employee.Emid')">Update</button>
                        <button class="btn btn-outline-dark" onclick="deleteEmployee('@employee.Emid')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="table-responsive" style="height:500px; overflow-y:auto; margin:20px;">
    <h3>Departments</h3>
    <button class="btn btn-outline-dark" id="openModalButton">Add Department</button>
    <table class="table">
        <thead>
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model.Departments)
            {
                <tr>
                    <td>@department.Doid</td>
                    <td>@department.Name</td>
                    <td>@department.ReportsTo</td>
                    <td>
                        <button class="btn btn-outline-dark" onclick="editDepartment('@department.Doid')">Update</button>
                        <button class="btn btn-outline-dark" onclick="deleteDepartment('@department.Doid')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="table-responsive" style="height:500px; overflow-y:auto; margin:20px;">
    <h3>Teams</h3>
    <button class="btn btn-outline-dark" id="openModalButton">Add Department</button>
    <table class="table">
        <thead>
            <tr>
                <th>Team ID</th>
                <th>Team Name</th>
                <th>Department ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model.Teams)
            {
                <tr>
                    <td>@team.TeamId</td>
                    <td>@team.TeamName</td>
                    <td>@team.DepartmentId</td>
                    <td>
                        <button class="btn btn-outline-dark" onclick="editDepartment('@team.TeamId')">Update</button>
                        <button class="btn btn-outline-dark" onclick="deleteDepartment('@team.TeamId')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


